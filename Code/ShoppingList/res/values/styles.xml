<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- ListView theme. -->
    <style name="TextViewStandardStyle" parent="AppBaseTheme">
        <item name="android:background">@color/white</item>
        <item name="android:cacheColorHint">@color/white</item>
    </style>
    
    <!-- Background theme. -->
   <style name="BackGroundStandardStyle" parent="AppBaseTheme" >
        <item name="android:background">@color/lightgray</item>
   </style>
   
    <!-- Background theme. -->
   <style name="BackGroundSettingStandardStyle" parent="AppBaseTheme" >
  		<item name="android:windowBackground">@color/lightgray</item>   
  	</style>
   
    <!-- NavigationDrawer theme. -->
   <style name="NavigationDrawerStandardStyle" parent="AppBaseTheme" >
       <item name="android:background">@color/white</item>
   </style>
    

</resources>
