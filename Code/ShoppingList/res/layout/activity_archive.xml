<android.support.v4.widget.DrawerLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayoutArchive"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ArchiveActivity" 
    style="@style/BackGroundStandardStyle" >
    
        <RelativeLayout
        android:id="@+id/archive_welcome"
        android:layout_width="match_parent"
    	android:layout_height="match_parent" >
        
        <TextView
	        android:id="@+id/archive_welcome_message"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:textSize="16sp"
        	android:text="@string/archive_welcome_message" /> 
        
    </RelativeLayout>

    <ListView
        android:id="@+id/ListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:divider="#CCCCCC"
        android:dividerHeight="1dp"
        style="@style/TextViewStandardStyle" >
    </ListView>

</RelativeLayout>

<!-- The navigation drawer -->
<RelativeLayout
        android:id="@+id/drawer_Linearlayout"
        android:layout_width="240dp"
        android:layout_height="fill_parent"
        android:layout_gravity="start"
        style="@style/NavigationDrawerStandardStyle" >

	<ListView
        android:id="@+id/left_drawer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:choiceMode="singleChoice"
        android:divider="@color/mediumgray"
        android:dividerHeight="1dp" >
	</ListView>
      	    
 </RelativeLayout>
    
</android.support.v4.widget.DrawerLayout>
