<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    
     <PreferenceCategory 
        android:title="@string/general_settings"
        android:key="common_settings" >
        
		<ListPreference
	        android:key="language"
	        android:title="@string/language"
	        android:dialogTitle="@string/language_dialog"
	        android:entries="@array/choosable_languages"
	        android:entryValues="@array/choosable_languages_keys"
	        android:defaultValue="@string/english" />

		  
		 <PreferenceScreen
            android:key="button_theme_setting_key"
            android:title="@string/theme_settings"
            android:persistent="false">
            
		    <ListPreference
	        android:key="color_setting"
	        android:title="@string/color_setting"
	        android:dialogTitle="@string/color_dialog"
	        android:entries="@array/default_color_choice_names"
	        android:entryValues="@array/default_color_choice_values"
	        android:defaultValue= "#FFFFFF" />
		     
        </PreferenceScreen>
        
	
	</PreferenceCategory> 
