<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.unibe.ese.shoppinglist"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:name="ch.unibe.ese.core.BaseApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ch.unibe.ese.shoppinglist.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ch.unibe.ese.shoppinglist.CreateListActivity"
            android:label="@string/title_activity_create_list" 
            android:parentActivityName="ch.unibe.ese.shoppinglist.HomeActivity" >
        </activity>
        <activity
            android:name="ch.unibe.ese.shoppinglist.ViewListActivity"
            android:label="@string/title_activity_view_list"
            android:parentActivityName="ch.unibe.ese.shoppinglist.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.unibe.ese.shoppinglist.HomeActivity" />
        </activity>
        <activity
            android:name="ch.unibe.ese.shoppinglist.CreateItemActivity"
            android:label="@string/title_activity_create_item"
            android:parentActivityName="ch.unibe.ese.shoppinglist.ViewListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.unibe.ese.shoppinglist.ViewListActivity" />
        </activity>
    </application>

</manifest>
